{
  "manifest_version": 3,
  "name": "Bookmark Explorer",
  "version": "1.0",
  "description": "Manage your bookmarks like Windows File Explorer",
  "permissions": ["bookmarks", "tabs", "system.display"],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}